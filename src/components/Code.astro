---
export interface Props {
  lang: string;
  content: string;
}

const { lang, content } = Astro.props;
---

<pre class="line-numbers"><code class:list={[`language-${lang}`, "match-braces"]}>{content}</code></pre>

<style>
@media (max-width: 500px) {
  pre.line-numbers {
    font-size: 0.6rem;
  }
}
</style>
