---
import Layout from "../layouts/Layout.astro";
import Editor from "../components/Editor";

export const prerender = true;
---

<Layout title="PastePlz">
  <Editor client:only="solid-js" />
</Layout>

<style is:global>
.container {
  margin-top: 3rem;
}

.config {
  display: flex;
  justify-content: space-evenly;

  margin: 1rem 0;
}

.config * {
  font-size: 1.25rem;
}

.editor {
  width: 100%;
  height: 40rem;
}

@media (max-width: 500px) {
  .container {
    margin-top: 1.5rem;
  }

  .config * {
    font-size: 1rem;
  }

  .editor {
    height: 30rem;
  }
}

@media (max-width: 350px) {
  .container {
    margin-top: 0.8rem;
  }

  .config {
    flex-direction: column;
    justify-content: normal;
    align-items: center;
  }

  .config * {
    margin: 0.1rem 0;
    font-size: 0.8rem;
  }
}
</style>
